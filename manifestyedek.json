{
    "name": "ResearchedIn",
    "version": "1.0",
    "description": "Grab details for your research!",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "background": {
        "scripts": ["getdetails.js"],
        "persistent": false
    },
    "manifest_version": 2
}